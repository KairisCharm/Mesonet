<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/test_text"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="left|center_vertical"
            android:text="@string/contact_web_text"
            android:textSize="@dimen/contact_text_size"
            android:textColor="@color/contact_heading_text_color"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="left|center_vertical"
            android:text="@string/contact_email_text"
            android:textSize="@dimen/contact_text_size"
            android:textColor="@color/contact_heading_text_color"/>
        
	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="left|center_vertical"
            android:text="@string/contact_twitter_text"
            android:textSize="@dimen/contact_text_size"
            android:textColor="@color/contact_heading_text_color"/>
	    
	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="left|center_vertical"
            android:text="@string/contact_facebook_text"
            android:textSize="@dimen/contact_text_size"
            android:textColor="@color/contact_heading_text_color"/>
	    
	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="left|center_vertical"
            android:text="@string/contact_phone_text"
            android:textSize="@dimen/contact_text_size"
            android:textColor="@color/contact_heading_text_color"/>
	    
	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="left|center_vertical"
            android:text="@string/contact_address_text"
            android:textSize="@dimen/contact_text_size"
            android:textColor="@color/contact_heading_text_color"/>
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">
        
        <Button 
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:gravity="left|center_vertical"
	        android:text="@string/contact_web_button"
	        android:textSize="@dimen/contact_text_size"
	        android:textColor="@color/contact_link_text_color"
	        android:background="@null"
	        android:onClick="OpenWebPage"/>
        
	    <Button 
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:gravity="left|center_vertical"
	        android:text="@string/contact_email_button"
	        android:textSize="@dimen/contact_text_size"
	        android:textColor="@color/contact_link_text_color"
	        android:background="@null"
	        android:onClick="OpenEmail"/>
	    
	    <Button 
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:gravity="left|center_vertical"
	        android:text="@string/contact_twitter_button"
	        android:textSize="@dimen/contact_text_size"
	        android:textColor="@color/contact_link_text_color"
	        android:background="@null"
	        android:onClick="OpenTwitter"/>
	    
	    <Button 
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:gravity="left|center_vertical"
	        android:text="@string/contact_facebook_button"
	        android:textSize="@dimen/contact_text_size"
	        android:textColor="@color/contact_link_text_color"
	        android:background="@null"
	        android:onClick="OpenFacebook"/>
	    
	    <Button 
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:gravity="left|center_vertical"
	        android:text="@string/contact_phone_button"
	        android:textSize="@dimen/contact_text_size"
	        android:textColor="@color/contact_link_text_color"
	        android:background="@null"
	        android:onClick="OpenPhone"/>
	    
	    <Button 
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/contact_address_size"
	        android:gravity="left|center_vertical"
	        android:text="@string/contact_address_button"
	        android:textSize="@dimen/contact_text_size"
	        android:textColor="@color/contact_link_text_color"
	        android:background="@null"
	        android:onClick="OpenMaps"/>
	    
    </LinearLayout>
    
</LinearLayout>