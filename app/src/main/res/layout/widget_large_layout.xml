<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_large_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/widget_small_layout"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/widget_forecast_background"
        android:baselineAligned="false">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="vertical"
            android:baselineAligned="false">
            <TextView
		        android:id="@+id/widget_forecast_time1"
		        android:lines="2"
		        android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:layout_marginTop="8dp"
		        android:text="@string/empty_field"
		        android:textSize="14sp"
		        android:textStyle="bold"
		        android:textColor="@color/widget_text_field"
		        android:textAllCaps="true"
		        android:gravity="center_horizontal"/>
		    
		    <RelativeLayout
		        android:id="@+id/widget_forecast_middle1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal">
		        
				<ImageView
					android:id="@+id/widget_forecast_image1"
					android:layout_width="52dp"
					android:layout_height="52dp"
					android:layout_marginRight="4dp"
					android:adjustViewBounds="true"
					android:scaleType="fitCenter"
					android:contentDescription="@string/empty_field"/>
			    
				<RelativeLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="4dp"
		            android:layout_toRightOf="@id/widget_forecast_image1">
		            
				    <TextView
				        android:id="@+id/widget_forecast_loworhigh1"
				        android:lines="1"
				        android:layout_width="0px"
				        android:layout_height="wrap_content"
				        android:layout_alignLeft="@+id/widget_forecast_hightemp1"
				        android:layout_alignRight="@id/widget_forecast_hightemp1"
				        android:text="@string/empty_field"
				        android:textSize="16sp"
				        android:textColor="@color/widget_text_heading"
				        android:gravity="center"/>
				    
				    <TextView
				        android:id="@id/widget_forecast_hightemp1"
				        android:lines="1"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="-2dp"
				        android:layout_below="@id/widget_forecast_loworhigh1"
				        android:text="@string/empty_field"
				        android:textSize="18sp"
				        android:textStyle="bold"
				        android:textColor="@color/pink_text_color"
				        android:gravity="center"/>
				    
				    <TextView
				        android:id="@+id/widget_forecast_lowtemp1"
				        android:lines="1"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="-2dp"
				        android:layout_below="@id/widget_forecast_loworhigh1"
				        android:text="@string/empty_field"
				        android:textSize="18sp"
				        android:textStyle="bold"
				        android:textColor="@color/blue_text_color"
				        android:gravity="center"
				        android:visibility="invisible"/>
				</RelativeLayout>
			    
		    </RelativeLayout>
		    
		    <TextView
		        android:id="@+id/widget_forecast_condition1"
		        android:lines="2"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp"
		        android:layout_marginBottom="8dp"
		        android:text="@string/empty_field"
		        android:textSize="14sp"
		        android:textStyle="bold"
		        android:textColor="@color/widget_text_field"
		        android:gravity="center_horizontal"/>
        </LinearLayout>
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/widget_divider"
            android:contentDescription="@string/divider"/>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
			android:layout_marginStart="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="vertical"
            android:baselineAligned="false">
		    
            <TextView
		        android:id="@+id/widget_forecast_time2"
		        android:lines="2"
		        android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:layout_marginTop="8dp"
		        android:text="@string/empty_field"
		        android:textSize="14sp"
		        android:textStyle="bold"
		        android:textColor="@color/widget_text_field"
		        android:textAllCaps="true"
		        android:gravity="center_horizontal"/>
		    
		    <RelativeLayout
		        android:id="@+id/widget_forecast_middle2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal">
		        
				<ImageView
					android:id="@+id/widget_forecast_image2"
					android:layout_width="52dp"
					android:layout_height="52dp"
					android:layout_marginRight="4dp"
					android:adjustViewBounds="true"
					android:scaleType="fitCenter"
					android:contentDescription="@string/empty_field"/>
			    
				<RelativeLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="4dp"
		            android:layout_toRightOf="@id/widget_forecast_image2">
				    <TextView
				        android:id="@+id/widget_forecast_loworhigh2"
				        android:lines="1"
				        android:layout_width="0px"
				        android:layout_height="wrap_content"
				        android:layout_alignLeft="@+id/widget_forecast_hightemp2"
				        android:layout_alignRight="@id/widget_forecast_hightemp2"
				        android:text="@string/empty_field"
				        android:textSize="16sp"
				        android:textColor="@color/widget_text_heading"
				        android:gravity="center"/>
				    
				    <TextView
				        android:id="@id/widget_forecast_hightemp2"
				        android:lines="1"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="-2dp"
				        android:layout_below="@id/widget_forecast_loworhigh2"
				        android:text="@string/empty_field"
				        android:textSize="18sp"
				        android:textStyle="bold"
				        android:textColor="@color/pink_text_color"
				        android:gravity="center"
				        android:visibility="invisible"/>
				    
				    <TextView
				        android:id="@+id/widget_forecast_lowtemp2"
				        android:lines="1"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="-2dp"
				        android:layout_below="@id/widget_forecast_loworhigh2"
				        android:text="@string/empty_field"
				        android:textSize="18sp"
				        android:textStyle="bold"
				        android:textColor="@color/blue_text_color"
				        android:gravity="center"/>
				    
				</RelativeLayout>
		    </RelativeLayout>
		    
		    <TextView
		        android:id="@+id/widget_forecast_condition2"
		        android:lines="2"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp"
		        android:layout_marginBottom="8dp"
		        android:text="@string/empty_field"
		        android:textSize="14sp"
		        android:textStyle="bold"
		        android:textColor="@color/widget_text_field"
		        android:gravity="center_horizontal"/>
        </LinearLayout>
        
    </LinearLayout>
	
</LinearLayout> 